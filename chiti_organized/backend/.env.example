# Team Chitti RAG Environment Configuration
# Copy this file to .env and fill in your API keys and configuration

# =============================================================================
# MODE SELECTION
# =============================================================================
# Choose your mode: online, local, or hybrid
RAG_MODE=local

# =============================================================================
# ONLINE MODE CONFIGURATION
# =============================================================================

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_MODEL=gpt-4

# OpenAI Embeddings Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_EMBEDDING_DIMENSIONS=1536

# Qdrant Vector Database Configuration
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_COLLECTION_NAME=team_chitti_docs
QDRANT_TIMEOUT=60

# MongoDB Atlas Configuration
MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_ATLAS_DB_NAME=team_chitti_rag
MONGODB_ATLAS_COLLECTION=documents

# =============================================================================
# LOCAL MODE CONFIGURATION
# =============================================================================

# Phi-3 Mini LLM Configuration
PHI3_MODEL_NAME=microsoft/Phi-3-mini-4k-instruct
PHI3_DEVICE=auto  # auto, cuda, cpu
PHI3_MAX_TOKENS=2000
PHI3_TEMPERATURE=0.1
PHI3_CACHE_DIR=./models/phi3

# Local Embeddings Configuration
LOCAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LOCAL_EMBEDDING_DEVICE=auto  # auto, cuda, cpu
LOCAL_EMBEDDING_CACHE_DIR=./models/embeddings
LOCAL_EMBEDDING_DIMENSIONS=384

# FAISS Vector Store Configuration
FAISS_INDEX_PATH=./data/vector_store/faiss_index
FAISS_INDEX_TYPE=IVF  # Flat, IVF, HNSW
FAISS_NLIST=100

# Local MongoDB Configuration
MONGODB_LOCAL_URI=mongodb://localhost:27017
MONGODB_LOCAL_DB_NAME=team_chitti_rag
MONGODB_LOCAL_COLLECTION=documents

# =============================================================================
# HYBRID MODE CONFIGURATION
# =============================================================================
# Override individual components for hybrid mode
# Leave empty to use mode defaults

# Component choices: azure|phi3, openai|local, qdrant|faiss, atlas|local
HYBRID_LLM=
HYBRID_EMBEDDINGS=
HYBRID_VECTORSTORE=
HYBRID_DATABASE=

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================

# Generation Parameters
MAX_TOKENS=2000
TEMPERATURE=0.1
TOP_K=5

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/team_chitti_rag.log

# Performance
BATCH_SIZE=32
MAX_WORKERS=4

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Debug Mode
DEBUG=false

# Cache Settings
ENABLE_CACHING=true
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60